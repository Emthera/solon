{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/global-physician.json",
  "title": "Physician Profile",
  "description": "An agnostic representation of a healthcare provider using URI-based identity.",
  "type": "object",
  "required": [
    "physician"
  ],
  "properties": {
    "physician": {
      "type": "object",
      "description": "The container block for physician data.",
      "required": [
        "id",
        "identity",
        "name",
        "status"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "identity": {
          "type": "string",
          "format": "uri",
          "description": "Resolvable URI (e.g., decentralized ID or LinkedIn profile)."
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive", "suspended"],
          "default": "active"
        },
        "meta": {
          "type": "object",
          "description": "A descriptive physician profile data",
          "required": ["name", "languages"],
          "name": {
            "type": "object",
            "required": ["full_name"],
            "properties": {
              "full_name": { "type": "string" },
              "prefix": { "type": "string" },
              "suffix": { "type": "string" }
            }
          },
          "languages": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "A language name"
                  },
                  "level": {
                    "type": "string",
                    "description": "A fluency level"
                  }
                }
              }
            }
          }
        },
        "specialties": {
          "type": "array",
          "items": { "type": "string" }
        },
        "licenses": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "jurisdiction": { "type": "string" },
              "identifier": { "type": "string" },
              "issuer_uri": { "type": "string", "format": "uri" }
            },
            "required": ["jurisdiction", "identifier"]
          }
        },
        "contacts": {
          "type": "array",
          "description": "List of communication channels.",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["method", "value"],
            "properties": {
              "use": {
                "type": "string",
                "description": "Context (e.g., work, home, billing)."
              },
              "method": {
                "type": "string",
                "description": "Type of contact (e.g., phone, email, whatsapp, signal, address)."
              },
              "value": {
                "description": "The contact detail. Can be a string or a structured address object.",
                "type": "string",
                "description": "For email, phone, url, or messaging handles."
              }
            }
          }
        },
      "provenance": {
          "type": "object",
          "description": "The digital 'stamp' verifying authenticity.",
          "required": ["author_did", "signature_type", "signature_value", "timestamp"],
          "properties": {
            "author": {
              "type": "string",
              "description": "The Decentralized ID of the doctor signing this (e.g., did:solon:dr-hassan)."
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "Exact moment of signing."
            },
            "signature_type": {
              "type": "string",
              "enum": ["JWS", "Ed25519Signature2020", "EcdsaSecp256k1Signature2019"],
              "description": "The mathematical algorithm used for the stamp."
            },
            "signature_value": {
              "type": "string",
              "description": "The cryptographic hash (the 'stamp' itself)."
            },
            "legal_context": {
              "type": "string",
              "enum": ["informational", "eidas-qualified", "dea-epcs", "simple-electronic"],
              "description": "Declares the legal weight of this signature."
            }
          }
        }
      }
    }
  }
}
