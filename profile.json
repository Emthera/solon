{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Emthera/spec/main/profile.json",
  "title": "Open Medical Profile",
  "description": "The master index for patient-sovereign health records.",
  "x-author": "Emthera / TheLazzziest",
  "x-license": "CC-BY-NC-SA-4.0",
  "type": "object",
  "required": ["profile"],
  "properties": {
    "profile": {
      "type": "object",
      "required": ["meta", "tracks", "tools", "history", "emergency_contacts"],
      "properties": {
        "meta": {
          "type": "object",
          "required": ["first_name", "last_name", "date_of_birth"],
          "properties": {
            "first_name": { "type": "string" },
            "last_name": { "type": "string" },
            "date_of_birth": { "type": "string", "format": "date" },
            "gender": { "type": "string" },
            "nationality": { "type": "string" },
            "marital_status": { "type": "string" },
            "occupation": { "type": "string" },
            "contacts": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["type", "value"],
                "properties": {
                  "type": { "type": "string" },
                  "value": { "type": "string" }
                }
              }
            }
          }
        },
        "tracks": {
          "type": "array",
          "description": "Named pointers to treatment schemas/records.",
          "items": {
            "type": "object",
            "required": ["name", "ref"],
            "properties": {
              "name": { 
                "type": "string", 
                "description": "Display name for the track (e.g., 'Heart Conductivity', 'Biohacking Experiments')." 
              },
              "ref": {
                "description": "Polymorphic reference to the Treatment Schema.",
                "oneOf": [
                  { "type": "string", "format": "uuid" },
                  { "type": "string", "format": "uri", "description": "DID, IPFS CID, or remote URL." },
                  { "type": "string", "description": "Local file path or legacy identifier." }
                ]
              }
            }
          }
        },
        "tools": {
          "type": "array",
          "description": "Inventory of hardware and software tools used for health tracking.",
          "items": {
            "type": "object",
            "required": ["name", "category"],
            "properties": {
              "name": { "type": "string", "description": "e.g., 'Apple Watch Series 9', 'CareClinic App'" },
              "category": { "type": "string" },
              "source": { 
                "type": "string", 
                "format": "uri",
                "description": "The URI of the vendor/manufacturer (e.g., 'https://apple.com', 'did:web:dexcom.com')." 
              },
              "version": { "type": "string", "description": "Firmware or App version." },
              "identifier": {
                "type": "string", 
                "description": "Serial number, MAC address, or App Store ID." 
              },
              "status": { "type": "string", "enum": ["active", "deprecated", "archived"] },
              "description": { "type": "string" }
            }
          }
        },
        "history": {
          "type": "array",
          "description": "A flat discovery index. Each item can point to multiple clinical records.",
          "items": {
            "type": "object",
            "required": ["name", "type", "schema_refs"],
            "properties": {
              "name": { "type": "string", "description": "e.g., 'Hypertension'" },
              "type": { "type": "string", "description": "e.g., 'condition', 'surgery'" },
              "schema_refs": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["ref", "version"],
                  "properties": {
                    "ref": { "type": "string", "format": "uri" },
                    "version": { "type": "string" },
                    "entry_uid": { "type": "string", "format": "uuid" }
                  }
                }
              }
            }
          }
        },
        "insurance": {
          "type": "array",
          "description": "Healthcare coverage details.",
          "items": {
            "type": "object",
            "required": ["provider_name", "policy_number"],
            "properties": {
              "provider_name": { "type": "string" },
              "provider_uri": { "type": "string", "format": "uri", "description": "Vendor URI/DID" },
              "policy_number": { "type": "string" },
              "group_number": { "type": "string" },
              "plan_type": { "type": "string", "description": "e.g., PPO, HMO, Private" },
              "expiry_date": { "type": "string", "format": "date" }
            }
          }
        },
        "emergency_contacts": {
          "type": "array",
          "description": "Trusted individuals to contact in crisis.",
          "items": {
            "type": "object",
            "required": ["name", "relationship", "phone"],
            "properties": {
              "name": { "type": "string" },
              "relationship": { "type": "string", "description": "e.g., Spouse, Parent, Guardian" },
              "contacts" : {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["type", "value"],
                  "properties": {
                    "type": { "type": "string", "description": "e.g., phone, email, matrix, did_comm" },
                    "value": { "type": "string" }
                  }
                }
              },
              "note": { "type": "string", "description": "e.g., 'Has power of attorney'" }
            }
          }
        }
      }
    }
  }
}
